<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaggerHiltPlayground" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_logo</item>
        <item name="splashScreenIconSize">150dp</item>
        <item name="postSplashScreenTheme">@style/Theme.DaggerHiltPlayground</item>
    </style>

    <style name="Theme.App.Title1" parent="Theme.MaterialComponents">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/title_margin</item>
        <item name="android:layout_marginEnd">@dimen/title_margin</item>
        <item name="android:layout_marginTop">@dimen/title_margin</item>
        <item name="android:textSize">@dimen/title1_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkPrimaryColor</item>
    </style>

    <style name="Theme.App.Title2" parent="Theme.MaterialComponents">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/title_margin</item>
        <item name="android:layout_marginEnd">@dimen/title_margin</item>
        <item name="android:layout_marginTop">@dimen/title_margin</item>
        <item name="android:textSize">@dimen/title2_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.App.Title3" parent="Theme.MaterialComponents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/title_margin</item>
        <item name="android:layout_marginTop">@dimen/title3_margin</item>
    </style>
    <style name="Theme.App.Title4" parent="Theme.MaterialComponents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/title_margin</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
